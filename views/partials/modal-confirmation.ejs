<%
const title = confirmTitle || 'Confirmar envío';
const msg   = confirmMessage || '¿Estás seguro que deseas enviar el formulario?';
%>
<div
  id="confirm-modal"
  class="fixed inset-0 bg-black bg-opacity-70 hidden flex items-center justify-center z-50"
  role="dialog"
  aria-modal="true"
>
  <div class="bg-[#222222] rounded-lg shadow-lg max-w-md w-full p-6 text-white relative -mt-20">
    <h3 class="text-xl font-semibold mb-4 text-yellow-400"><%= title %></h3>
    <p class="mb-6"><%= msg %></p>
    <div class="flex justify-end gap-4">
      <button
        id="cancel-confirm"
        type="button"
        class="px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 transition font-semibold"
      >
        Cerrar
      </button>
      <button
        id="confirm-submit"
        type="button"
        class="px-4 py-2 bg-yellow-400 rounded hover:bg-yellow-500 transition font-semibold text-black"
      >
        Enviar
      </button>
    </div>
  </div>
</div>
