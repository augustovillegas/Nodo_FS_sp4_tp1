<section class="bg-[#1a1a1a] text-white rounded-lg shadow-lg max-w-screen-xl mx-auto p-8 lg:p-12 my-8 lg:my-0">
  <h2 class="text-4xl font-bold mb-8 text-yellow-400">Agregar Superhéroe</h2>

  <%- include('partials/alerts', { errors }) %>

  <form
    id="superhero-form"
    action="/api/heroes/agregar"
    method="POST"
    novalidate
    class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8"
  >
    <%- include('partials/form-fields', { old, errors }) %>

    <div class="lg:col-span-3 flex justify-end mt-6">
      <%- include('partials/form-actions', {
            submitLabel: 'Agregar superhéroe',
            cancelHref: '/api/heroes'  
          }) %>
    </div>
  </form>

  <%- include('partials/modal-confirmation', {
        confirmTitle: 'Confirmar envío',
        confirmMessage: '¿Confirmas agregar este superhéroe?'
      }) %>
</section>

<script src="/js/form-utils.js" defer></script>
<script src="/js/confirm-modal.js" defer></script>
<script src="/js/confirm-submit.js" defer></script>
<script src="/js/focus-errors.js" defer></script>
